<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations" value="classpath:spring/jdbc-test.properties"/>
    </bean>

    <bean id="actionHandler" class="com.muwp.sharding.jdbc.core.handler.SplitActionHandler">
        <property name="readWriteSeparate" value="${sharding-jdbc.readWriteSeparate}"/>
        <property name="splitTablesHolder" ref="splitTablesHolder"/>
    </bean>

    <!-- SplitBizTemplate Entry -->
    <bean name="simpleSplitJdbcTemplate" class="com.muwp.sharding.jdbc.core.SimpleSplitJdbcTemplate">
        <property name="splitActionRunner" ref="actionHandler"/>
        <property name="splitTablesHolder" ref="splitTablesHolder"/>

        <property name="readWriteSeparate" value="${sharding-jdbc.readWriteSeparate}"/>
    </bean>

    <!-- SplitTablesHolder -->
    <bean name="splitTablesHolder" class="com.muwp.sharding.jdbc.core.SplitTablesHolder" init-method="init">
        <property name="splitTables">
            <list>
                <ref bean="splitTable"/>
            </list>
        </property>
    </bean>

    <!-- SplitTables -->
    <bean name="splitTable" class="com.muwp.sharding.jdbc.core.SplitTable" init-method="init">
        <property name="dbNamePrefix" value="sharding_jdbc"/>
        <property name="tableNamePrefix" value="test"/>
        <property name="dbNum" value="1"/>
        <property name="tableNum" value="4"/>
        <property name="splitStrategyType" value="HORIZONTAL"/>
        <property name="splitNodes">
            <list>
                <ref bean="node_0"/>
                <ref bean="node_1"/>
            </list>
        </property>

        <property name="readWriteSeparate" value="false"/>
    </bean>

    <!-- SplitNodes -->
    <bean name="node_0" class="com.muwp.sharding.jdbc.core.SplitNode">
        <property name="masterTemplate" ref="jdbcTemplate_0"/>
    </bean>

    <bean name="node_1" class="com.muwp.sharding.jdbc.core.SplitNode">
        <property name="masterTemplate" ref="jdbcTemplate_1"/>
    </bean>

    <!-- Spring JdbcTemplates -->
    <bean id="jdbcTemplate_0" class="org.springframework.jdbc.core.JdbcTemplate" abstract="false" lazy-init="false">
        <property name="dataSource">
            <ref bean="masterDatasource_0"/>
        </property>
    </bean>

